<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".work_experience">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:text="WORK EXPERIENCE"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_marginTop="10sp"
        android:text="Worked as a Core Committee Member under Public Relations of UPES-CSI 2019-20."
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="10sp"
        android:text="Worked as a Core Committee Member under Photography of UPES-CSI 2019-20."
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_marginTop="10sp"
        android:text="Member of Organising Committee of HACKATHON 4.0"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="10sp"
        android:text="Member of Organising Committee of National Convention YUGMAK 2019."
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_marginTop="10sp"
        android:text="Member of Oraganising Committee of HACKATHON 3.O."
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_marginTop="10sp"
        android:text="Worked as a Core Committee Member under Public Relations of UPES-CSI 2018-19."
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView22"
        android:layout_marginTop="30dp"
        android:text="Next"
        android:layout_centerInParent="true"/>


</RelativeLayout>